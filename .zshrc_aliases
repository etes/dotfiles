# General
alias l='ls -lha'

# Git
# (more aliases in ~/.oh-my-zsh/plugins/git)
alias gd='git diff'
compdef _git gd=git-diff
alias gs='git status'
compdef _git gs=git-status
alias glg='git log'
compdef _git glg=git-log
alias gsl='git stash -u && gl && git stash pop'

# npm shortcuts
alias pre-version='git pull && npm prune && npm install -q && npm test'
alias post-version='git push && git push --tags && npm publish'
alias patch='pre-version && npm version patch && post-version'
alias minor='pre-version && npm version minor && post-version'
alias major='pre-version && npm version major && post-version'

# Server-specific shortcuts
if [[ -f "/etc/hostname" ]] ; then
  # Admin stuff
  alias uu='sudo aptitude update && sudo aptitude upgrade'
  alias ss='sudo service'
  alias apt='sudo aptitude'

  # Folder stuff
  alias www='cd ~/www'
  alias log='cd ~/www/log'
  alias apache2='cd /etc/apache2/'
  alias nginx='cd /etc/nginx/'
fi

# Mac-specific shortcuts
if [[ ! -f "/etc/hostname" ]] ; then

  # cyberhobo
  # alias git='cyberhobo git'
  # alias npm='cyberhobo npm'

  alias gh='github'
  alias mongod='/usr/local/Cellar/mongodb/2.4.3-x86_64/bin/mongod'
  alias mongoremote='ssh -L 27017:localhost:27017 -N feross@athena'
  alias redis='redis-server /usr/local/etc/redis.conf'
  alias s='subl'
fi
